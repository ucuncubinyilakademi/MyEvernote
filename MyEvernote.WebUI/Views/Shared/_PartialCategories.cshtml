@using MyEvernote.BusinessLayer;
@using MyEvernote.Entity;
@{
    CategoryManager cm = new CategoryManager();
    List<Category> categories = cm.GetCategories();
}

<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="#" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Tümü</a>
    @foreach (var item in categories)
    {
        <a href="#" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> @item.Title</a>
    }

</div>